###################### RENDERED FROM JINJA TEMPLATE ######################

spring.profiles.active: prod
spring:
  datasource:
    prod:
      # real database
      url: {{ datasource_url }}
      username: {{ datasource_username }}
      password: {{ datasource_password }}
      driverClassName: {{ datasource_driverClassName }}
  jpa:
    properties.hibernate.temp.use_jdbc_metadata_defaults: false
    show-sql: true
    hibernate.ddl-auto: validate

server.port: {{ server_port }}

cache:
  tables:
    lifetime:
      max: {{ max_cache_life_time }}
      min: {{ min_cache_life_time }}
    timeouts:
      seance_info_flush: {{ seance_info_cache_flush_timeout }}
  rps:
    lifetime: {{ rps_life_time }}
    timeouts:
      cron_timeout: {{ rps_map_flush_timeout }}

# actuator
management:
  endpoints:
    web.base-path: /movie-park-service
    # web.exposure.include: *
    # HEALTH ENDPOINT
    health.show-details: always
  health.diskSpace.enabled: false
